
<% if @comment.errors.any? %>
<div class="alert alert-danger text-center" role="alert">
  <p>Nous n'avons pas réussi à créer le commentaire pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @comment.errors.full_messages.each do |comment| %>
    <li><%= comment %></li>
    <% end %>
  </ul>
</div>
<% end %>

<h1 class="m-4 text-center"> Nouveau commentaire </h1>
<div class= "container d-flex justify-content-center">
  <div class="form-group col-8">
    <%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag 'Content' %>
    <%= text_area_tag 'content', @comment.content, class: "form-control"%>
    <br /> <br />

    <%= submit_tag "Créer commentaire",  class: "btn btn-primary" %>

    <% end %>
  </div>
</div>

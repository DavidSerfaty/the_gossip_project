<% if @gossip.errors.any? %>
<div class="alert alert-danger text-center" role="alert">
  <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @gossip.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="container">
  <h1 class="text-center my-5"> Nouveau potin</h1>
  <div class="col-12">
    <div class="shadow-none bg-light rounded p-4">
      <%= form_tag url_for(action: 'create'), method: "post" do %>
      <%= label_tag 'Titre du Gossip' %>
      <%= text_field_tag 'title', @gossip.title, class: "form-control" %><br>
      <%= label_tag 'Contennu de mon Gossip' %>
      <%= text_area_tag 'content', @gossip.content, class: "form-control"%><br>
      <%= submit_tag "Créer le Gossip",  class: "btn btn-primary" %>

      <% end %>
    </div>
  </div>
</div>

<div class="text-center mt-5">
  <div class="m-auto" style="width: 300px">
    <%= form_tag url_for(action: 'create'), method: "post", class: "form-signin" do %>
    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
    <%= text_field_tag 'email', "", class: "form-control", placeholder: 'Email' %>
    <%= password_field_tag 'password',"", class: "form-control", placeholder: 'Mot de passe' %>
    <div class="custom-control custom-checkbox mb-3">
      <input type="checkbox" name='remember_token'class="custom-control-input" id="customCheck1">
      <label class="custom-control-label" for="customCheck1">Se souvenir de moi ?</label>
    </div>
    <%= submit_tag "Se Connecter",  class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
    <p class="mt-5 mb-3 text-muted">&copy; 2020-2021</p>
  </div>
</div>
